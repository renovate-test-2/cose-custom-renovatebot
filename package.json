{
  "name": "@mattrglobal/cose",
  "version": "1.0.1",
  "author": "MATTR",
  "license": "SEE LICENCE IN https://learn.mattr.global/docs/terms/sdk-licence-verifier-single-format-cwt-cose/",
  "private": false,
  "description": "An implementation of RFC8152",
  "homepage": "https://github.com/mattrglobal/cose",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/mattrglobal/cose",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "build": "tsc --pretty",
    "format": "prettier --write \"**/*.ts\" \"**/*.md\"  \"!**/lib/**\"",
    "lint": "eslint . --ext .ts --color --format=table",
    "lint:fix": "yarn lint --fix",
    "test": "jest"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@stablelib/hex": "2.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "8.11.0",
    "@typescript-eslint/parser": "8.11.0",
    "conventional-changelog": "6.0.0",
    "conventional-changelog-cli": "5.0.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.13.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-n": "^14.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "prettier": "3.3.3",
    "pretty-quick": "4.0.0",
    "text-encoding": "0.7.0",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.6.3"
  },
  "dependencies": {
    "@cto.af/textdecoder": "0.2.0",
    "@peculiar/webcrypto": "1.5.0",
    "@stablelib/base64": "2.0.0",
    "bignumber.js": "9.1.2",
    "buffer": "6.0.3",
    "cbor": "9.0.2",
    "cbor-web": "9.0.2",
    "util": "0.12.5",
    "zod": "3.11.6"
  },
  "react-native": {
    "./lib/crypto/crypto.js": "./lib/crypto/crypto-rn.js"
  },
  "browser": {
    "./lib/cbor/cbor.js": "./lib/cbor/cbor-browser.js",
    "./lib/crypto/crypto.js": "./lib/crypto/crypto-browser.js"
  },
  "husky": {
    "hooks": {
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "[[ -n $HUSKY_BYPASS ]] || pretty-quick --staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
